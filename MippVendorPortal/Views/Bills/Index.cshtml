                        function UpdateAmount(event) {
                            console.log("338", event.target.value);
                            var quanLen= document.querySelectorAll("#quantity").length
                            var quantity = document.querySelectorAll('#quantity')[quanLen-1].value;
                            var priceLen = document.querySelectorAll("#price").length
                            var price = document.querySelectorAll('#price')[priceLen - 1].value;
                            var amountLen = document.querySelectorAll("#amount").length;
                            var amount = parseFloat(quantity * price).toFixed(2);
                            document.querySelectorAll("#amount")[amountLen-1].value = amount;
                            var subtotal= 0.00;
                            for (let i = 0; i < document.querySelectorAll("#amount").length; i++)
                              subtotal+= parseFloat(document.querySelectorAll("#amount")[i].value);
                            document.getElementById("subtotals").innerText= parseFloat(subtotal).toFixed(2);

                        }



                        function CalculateTax(event) {
                            debugger;
                            
                            var taxString = event.target.value;
                            var tax = parseFloat(taxString.split("-")[1].split("%")[0]) / 100;
                            var amountLen = document.querySelectorAll("#amount").length;
                            var taxLen = document.querySelectorAll("#taxedAmount").length;
                            document.querySelectorAll("#taxedAmount")[taxLen - 1].value = 
                            parseFloat(parseFloat(tax * parseFloat(document.querySelectorAll('#amount')[amountLen - 1].value)) + parseFloat(document.querySelectorAll('#amount')[amountLen - 1].value)).toFixed(2);

                            document.getElementById('taxes').innerHTML = 
                           
                            parseFloat(parseFloat(document.getElementById("taxes").innerHTML) + tax * parseFloat(document.querySelectorAll('#amount')[amountLen - 1].value)).toFixed(2)
                            
                            
                            //document.getElementById('subtotals').innerHTML = parseFloat(document.querySelectorAll("#subtotals").value) + parseFloat(document.querySelectorAll("#price").value) * parseFloat(document.querySelectorAll("#quantity").value);
                            document.getElementById('totals').innerHTML = 
                                parseFloat(parseFloat(document.getElementById("totals").innerHTML) + parseFloat(document.querySelectorAll("#taxedAmount")[taxLen - 1].value)).toFixed(2);

                        };



                        let uploadButton = document.getElementById("upload-button");
                        let chosenImage = document.getElementById("chosen-image");
                        let fileName = document.getElementById("file-name");
                        let container = document.querySelector(".uploadSection");
                        let error = document.getElementById("error");
                        let imageDisplay = document.getElementById("image-display");

                        const fileHandler = (file, name, type) => {
                            if (type.split("/")[0] !== "image") {
                                //File Type Error
                                error.innerText = "Please upload an image file";
                                return false;
                            }
                            error.innerText = "";
                            let reader = new FileReader();
                            reader.readAsDataURL(file);
                            reader.onloadend = () => {
                                //image and file name
                                let imageContainer = document.createElement("figure");
                                let img = document.createElement("img");
                                img.src = reader.result;
                                imageContainer.appendChild(img);
                                imageContainer.innerHTML += `<figcaption>${name}</figcaption>`;
                                imageDisplay.appendChild(imageContainer);
                            };
                        };

                        //Upload Button
                        uploadButton.addEventListener("change", () => {
                            imageDisplay.innerHTML = "";
                            Array.from(uploadButton.files).forEach((file) => {
                                fileHandler(file, file.name, file.type);
                            });
                        });

                        container.addEventListener(
                            "dragenter",
                            (e) => {
                                e.preventDefault();
                                e.stopPropagation();
                                container.classList.add("active");
                            },
                            false
                        );

                        container.addEventListener(
                            "dragleave",
                            (e) => {
                                e.preventDefault();
                                e.stopPropagation();
                                container.classList.remove("active");
                            },
                            false
                        );

                        container.addEventListener(
                            "dragover",
                            (e) => {
                                e.preventDefault();
                                e.stopPropagation();
                                container.classList.add("active");
                            },
                            false
                        );

                        container.addEventListener(
                            "drop",
                            (e) => {
                                e.preventDefault();
                                e.stopPropagation();
                                container.classList.remove("active");
                                let draggedData = e.dataTransfer;
                                let files = draggedData.files;
                                imageDisplay.innerHTML = "";
                                Array.from(files).forEach((file) => {
                                    fileHandler(file, file.name, file.type);
                                });
                            },
                            false
                        );

                        window.onload = () => {
                            error.innerText = "";
                        };

