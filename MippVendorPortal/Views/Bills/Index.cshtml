@model IEnumerable<MippVendorPortal.Models.Setting>
@{
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
    ViewBag.Subtotal = "";
    ViewBag.Tax = "";
    ViewBag.Total = "";
    int tax = 0;
    int workorderId = ViewBag.woid;

}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="callout callout-info">
                <h5><i class="fas fa-info"></i> Note:</h5>
                This page has been enhanced for printing. Click the print button at the bottom of the invoice to test.
            </div>

            <div class="invoice p-3 mb-3" id="invoice">
                @foreach (var item in Model)
                {

                    <div class="row invoice-info" id="invoice-table">
                        <form style="width: 65%; margin-left: auto;">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Title:</label>
                                    <input type="text" class="form-control" id="billTitle">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Summary(optional):</label>
                                    <input type="text" class="form-control" id="summary">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="@item.BusinessName">Bill To:</label>
                                    <input type="text" class="form-control" value="@item.BusinessName" id="billTo">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="@item.CareOf">Care Of:</label>
                                    <input type="text" class="form-control" value="@item.CareOf" id="careOf">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="@item.AddressLine1">Address</label>
                                <input type="text" class="form-control" value="@item.AddressLine1" id="inputAddress">
                            </div>
                            <div class="form-group">
                                <label for="inputAddress2">Address 2</label>
                                <input type="text" class="form-control" value="@item.AddressLine2" id="inputAddress2">
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="inputCity">City</label>
                                    <input type="text" class="form-control" value="@item.City" id="city">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputState">Province</label>
                                    <input type="text" class="form-control" value="@item.Province" id="province">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputZip">Zip</label>
                                    <input type="text" class="form-control" value="@item.Zip" id="zip">
                                </div>
                            </div>
                        </form>

                        <div class="col-sm-4 invoice-col">
                            <form>

                                <div class="form-group">
                                    <label>Invoice:</label>
                                    <input type="text" class="form-control" value=" #007612" id="invoice">
                                </div>
                                <div class="form-group">
                                    <label>Workorder ID:</label>
                                    <input type="text" class="form-control" value="@item.Id" id="woId">
                                </div>
                                <div class="form-group">
                                    <label for="@item.BillDate">Bill Date:</label>
                                    <input type="date" class="form-control" value="@item.BillDate" id="billDate">
                                </div>
                                <div class="form-group">
                                    <label for="@item.DueDate">Due Date:</label>
                                    <input type="date" class="form-control" value="@item.DueDate" id="dueDate">
                                </div>

                            </form>
                        </div>

                    </div>

                }

                <div id="billItems">
                    <div style="border:solid 2px gray; padding: 1%;" id="billItem">
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label>Item</label>
                                <input type="text" class="form-control" id="item">
                            </div>

                            <div class="form-group col-md-2">
                                <label>Unit</label>
                                <input type="text" class="form-control" id="unit">
                            </div>
                            <div class="form-group col-md-2">
                                <label>Quantity</label>
                                <input type="number" class="form-control" id="quantity">
                            </div>
                            <div class="form-group col-md-3">
                                <label>Price</label>
                                <input type="number" id="price" step="0.01" class="form-control" onchange="UpdateAmount(event)">
                            </div>
                            <div class="form-group col-md-2">
                                <label>Amount</label>
                                <input type="number" step="0.01" class="form-control" id="amount">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-8">
                                <label>Description</label>
                                <textarea class="form-control" id="description"></textarea>
                            </div>
                            <div class="form-group col-md-2">
                                <label></label>
                                <select class="form-control" onchange="CalculateTax(event)" id="taxOptions">
                                    <option>Select Tax rate</option>
                                    @foreach (var item in ViewBag.taxList)
                                    {
                                        <option>@item</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group col-md-2">
                                <label></label>
                                <input type="number" step="0.01" class="form-control" id="taxedAmount">
                            </div>
                        </div>
                        <button id="add-row-btn" onclick="AddLine()" class="btn btn-primary">Add</button>
                        <button id="remove-btn" onclick="DeleteLine()" class="btn btn-primary">Delete</button>
                        @*                    <button id="btnNotify" class="btn btn-primary">Show Notification</button>
                        *@
                    </div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label>Notes:</label>
                    <textarea class="form-control" id="description"></textarea>
                </div>
                <div class="form-group">
                    <label>Footer:</label>
                    <textarea class="form-control" id="description"></textarea>
                </div>
                <div class="row">

                    <div class="col-6">
                        <p class="lead">Payment Methods:</p>
                        <img src="../../dist/img/credit/visa.png" alt="Visa">
                        <img src="../../dist/img/credit/mastercard.png" alt="Mastercard">
                        <img src="../../dist/img/credit/american-express.png" alt="American Express">
                        <img src="../../dist/img/credit/paypal2.png" alt="Paypal">
                        <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                            All cards are accepted.
                        </p>
                    </div>

                    <div class="col-6">
                        <p class="lead">Amount Due </p>
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th style="width:50%">Subtotal:</th>
                                        <td id="subtotals">0.00</td>
                                    </tr>
                                    <tr>
                                        <th>Tax</th>
                                        <td id="taxes">0.00</td>
                                    </tr>

                                    <tr>
                                        <th>Total:</th>
                                        <td id="totals">0.00</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <br />
                <label id="document">Upload Document</label>
                <div class="form-row">

                    <input id="file" name="file" type="file" class="form-control" style="width:75%" /> &nbsp;&nbsp;
                    <button class="btn btn-primary">Upload</button>
                </div>
                <br />

                <button id="save-btn" class="btn btn-primary">Save</button>





                <div class="row no-print">
                    <div class="col-12">
                       
                    </div>
                </div>


                @section Scripts {
                    <script src="~/dist/js/notify.js"></script>
                    <script src="~/dist/js/notify.min.js"></script>
                    <script>
                        
                        function showNotification(type, message) {
                            $.notify(message, type);
                        }

                        function AddLine(){
                            var newRow = `
