                                                                                                <div class="form-group col-md-3">
                                                                                                <label>Price</label>
                                                                                                    <input type="number" id="price" step="0.01" class="form-control" onchange="UpdateAmount(event)">
                                                                                            </div>
                                                                                                <div class="form-group col-md-2">
                                                                                                <label>Amount</label>
                                                                                                    <input type="number" step="0.01" class="form-control" id="amount">
                                                                                            </div>
                                                                                            </div>
                                                                                            <div class="form-row">
                                                                                                <div class="form-group col-md-8">
                                                                                                    <label>Description</label>
                                                                                                    <textarea class="form-control" id="description"></textarea>
                                                                                            </div>
                                                                                                <div class="form-group col-md-2">
                                                                                                    <label></label>
                                                                                                                             <select class="form-control" onchange="CalculateTax(event)" id="taxOptions">
                                                                                                         <option>Select Tax rate</option>
                        @foreach (var item in ViewBag.taxList)
                        {
                                                                                                                      <option>@item</option>
                        }
                                                                                                    </select>
                                                                                                </div>
                                                                                                <div class="form-group col-md-2">
                                                                                                    <label></label>
                                                                                                    <input type="number" step="0.01" class="form-control" id="taxedAmount">
                                                                                                </div>
                                                                                            </div>
                                                                                            <button id="add-row-btn" onclick="AddLine()" class="btn btn-primary">Add</button>
                                                                                            <button id="remove-btn" onclick="DeleteLine()" class="btn btn-primary">Delete</button>

                        @*                    <button id="btnNotify" class="btn btn-primary">Show Notification</button>
                                                            *@
                                                                                        </div>`;
                            $("#billItems").append(newRow);
                        }

                        function DeleteLine(){
                            document.getElementById("billItems").removeChild(document.getElementById("billItems").children[1]);

                        }

                        $("#save-btn").click(function () {
                            var testArr = [];

                            for(let i=0; i<document.querySelectorAll("#unit").length; i++){
                                testArr.push({
                                    item: document.querySelectorAll("#item")[i].value,
                                    description : document.querySelectorAll("#description")[i].value,
                                    quantity : document.querySelectorAll("#quantity")[i].value,
                                    unit : document.querySelectorAll("#unit")[i].value,
                                    price : document.querySelectorAll("#price")[i].value,
                                    tax : document.querySelectorAll("#taxOptions")[i].value,
                                    subtotal : document.querySelectorAll("#amount")[i].value,
                                    total : document.querySelectorAll("#taxedAmount")[i].value
                            });
                                                            }
                            console.log("save button clicked");
                            console.log("test", testArr);
                            console.log(@workorderId);
                            console.log(testArr);

                            var testArrSettings = [];


                            var title = document.getElementById("billTitle");
                            var summary = document.getElementById("summary");

                            $.post('@Url.Action("Insert","Bills")', { woId: @workorderId, testArr: testArr },
                                function () {
                                    $('#result').html('"PassThings()" successfully called.');
                                });
                        });


                    </script>
                    <script>
                   

                        //$(document).ready(function () {
                        //    $('#add-row-btn').click(function () {
                        //        showNotification('success', 'Bill item added!');
                        //    });
                        //});



                        function UpdateAmount(event) {
                            console.log("338", event.target.value);
                            var quanLen= document.querySelectorAll("#quantity").length
                            var quantity = document.querySelectorAll('#quantity')[quanLen-1].value;
                            var priceLen = document.querySelectorAll("#price").length
                            var price = document.querySelectorAll('#price')[priceLen - 1].value;
                            var amountLen = document.querySelectorAll("#amount").length;
                            var amount = parseFloat(quantity * price).toFixed(2);
                            document.querySelectorAll("#amount")[amountLen-1].value = amount;
                            var subtotal= 0.00;
                            for (let i = 0; i < document.querySelectorAll("#amount").length; i++)
                              subtotal+= parseFloat(document.querySelectorAll("#amount")[i].value);
                            document.getElementById("subtotals").innerText= parseFloat(subtotal).toFixed(2);

                        }



                        function CalculateTax(event) {
                            debugger;
                            
                            var taxString = event.target.value;
                            var tax = parseFloat(taxString.split("-")[1].split("%")[0]) / 100;
                            var amountLen = document.querySelectorAll("#amount").length;
                            var taxLen = document.querySelectorAll("#taxedAmount").length;
                            document.querySelectorAll("#taxedAmount")[taxLen - 1].value = 
                            parseFloat(parseFloat(tax * parseFloat(document.querySelectorAll('#amount')[amountLen - 1].value)) + parseFloat(document.querySelectorAll('#amount')[amountLen - 1].value)).toFixed(2);

                            document.getElementById('taxes').innerHTML = 
                           
                            parseFloat(parseFloat(document.getElementById("taxes").innerHTML) + tax * parseFloat(document.querySelectorAll('#amount')[amountLen - 1].value)).toFixed(2)
                            
                            
                            //document.getElementById('subtotals').innerHTML = parseFloat(document.querySelectorAll("#subtotals").value) + parseFloat(document.querySelectorAll("#price").value) * parseFloat(document.querySelectorAll("#quantity").value);
                            document.getElementById('totals').innerHTML = 
                            //parseFloat(document.querySelectorAll("#totals").value) + parseFloat(document.querySelectorAll("#subtotals").value) + parseFloat(document.querySelectorAll("#taxes").value);
                                parseFloat(parseFloat(document.getElementById("totals").innerHTML) + parseFloat(document.querySelectorAll("#taxedAmount")[taxLen - 1].value)).toFixed(2);

                        };
                    </script>
                }


            </div>

        </div>
    </div>
</div>



