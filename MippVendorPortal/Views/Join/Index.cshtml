@model MippVendorPortal.ViewModel.VendorClientViewModel

@{
    var isAgreed = false;

}

<div class="row d-flex justify-content-center">
    <div class="register-box col-md-6">
        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg" style="text-align-last: center;">
                    <div class="register-logo">
                        <a href="../Views/Homes/Index.cshtml"><b>Vendor</b> &nbsp;Portal</a>
                    </div>

                </p>
                <form asp-controller="Join" asp-action="Register" method="post">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="VendorName" placeholder="Your name here" value="@ViewBag.FullName">
                        <div class="input-group-append">
                            <div class="input-group-text" >
                                <span class="fas fa-id-card"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Email" asp-for="VendorEmail" value="@ViewBag.Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" asp-for="VendorPassword" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="VendorCompany" placeholder="Company or Organization" value="@ViewBag.Company">
                        <div class="input-group-append">
                            <div class="input-group-text" >
                                <span class="fas fa-briefcase"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="VendorPhone" placeholder="Phone Number">
                        <div class="input-group-append">
                            <div class="input-group-text" >
                                <span class="fas fa-phone"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3" style="display:none">
                        <input type="text" class="form-control" asp-for="ClientId" value="@ViewBag.ClientId">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-address-card"></span>
                            </div>
                        </div>
                    </div>

                    <div class="input-group mb-3" style="display:none">
                        <input type="text" class="form-control" asp-for="RootVendorId" value="@ViewBag.RootVendorId">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-address-card"></span>
                            </div>
                        </div>
                    </div>



                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                                <label for="agreeTerms">
                                    I agree to the <a href="#">terms</a>
                                </label>
                            </div>
                        </div>

                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block" id="submitButton" disabled>Accept</button>
                        </div>

                    </div>
                </form>

            </div>

        </div>
    </div>
    </div>

    











@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
    <script src="../wwwroot/plugins/jquery/jquery.min.js"></script>

    <script src="../wwwroot/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="../wwwroot/dist/js/adminlte.min.js?v=3.2.0"></script>


    <script>

        $("#check").click(function () {
            alert("Congrats! Registration successfull!!")
        });
        var checkbox = document.querySelector("input[name=terms]");

        checkbox.addEventListener('change', function () {
            var submitButton = $('#submitButton');
            if (this.checked) {
                console.log("Checkbox is checked..");
                submitButton.prop('disabled', false);

            } else {
                console.log("Checkbox is not checked..");
                submitButton.prop('disabled', true);
            }
        });
    </script>
}